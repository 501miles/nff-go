{
    "docker-config": {
        "request-timeout": 10000000000,
        "docker-client-version": "1.24",
        "privileged": true,
        "map-volumes": [
            "/sys/bus/pci/drivers:/sys/bus/pci/drivers",
            "/sys/kernel/mm/hugepages:/sys/kernel/mm/hugepages",
            "/sys/devices/system/node:/sys/devices/system/node",
            "/dev:/dev"
        ],
        "docker-port": 2375,
        "pktgen-port": 22022
    },
    "tests": [
        {
            "name": "latency-test-light",
            "test-time": 60000000000,
            "test-type": "TestTypeBenchmark",
            "test-apps": [
                {
                    "host-name": "hostname1",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./latency-part1"
                    ]
                },
                {
                    "host-name": "hostname2",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./perf_light"
                    ]
                }
            ]
        },
		{
            "name": "latency-test-seq",
            "test-time": 60000000000,
            "test-type": "TestTypeBenchmark",
            "test-apps": [
                {
                    "host-name": "hostname1",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./latency-part1", "-LAT_NUMBER=1000"
                    ]
                },
                {
                    "host-name": "hostname2",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./perf_seq"
                    ]
                }
            ]
        },
		{
            "name": "latency-test-main",
            "test-time": 60000000000,
            "test-type": "TestTypeBenchmark",
            "test-apps": [
                {
                    "host-name": "hostname1",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./latency-part1", "-LAT_NUMBER=1000"
                    ]
                },
                {
                    "host-name": "hostname2",
                    "image-name": "yanff-performance",
                    "app-type": "TestAppGo",
                    "exec-cmd": [
                        "./perf_main"
                    ]
                }
            ]
        }
    ]
}
